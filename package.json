{
  "name": "pizza-porter",
  "private": true,
  "description": "Website for the pizza-porter business",
  "version": "0.1.0",
  "author": "Fabio Berta <fnberta@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fnberta/pizza-porter-website"
  },
  "bugs": {
    "url": "https://github.com/fnberta/pizza-porter-website/issues"
  },
  "scripts": {
    "start": "yarn dev",
    "build": "gatsby build",
    "dev": "gatsby develop",
    "serve": "gatsby serve",
    "clean": "gatsby clean",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --fix 'src/**/*.{ts,tsx,js,jsx}'",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,css,scss,sass,md,yml,yaml}'",
    "gen-graphql": "graphql-codegen --config gql.yml"
  },
  "dependencies": {
    "gatsby": "^2.24.2",
    "gatsby-image": "^2.4.13",
    "gatsby-plugin-react-helmet": "^3.3.10",
    "gatsby-plugin-sharp": "^4.25.1",
    "gatsby-source-filesystem": "^2.3.19",
    "gatsby-transformer-sharp": "^2.5.11",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-helmet": "^6.1.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.16.3",
    "@graphql-codegen/typescript": "1.16.3",
    "@graphql-codegen/typescript-operations": "1.16.3",
    "@tailwindcss/ui": "^0.3.0",
    "@types/node": "^14.0.22",
    "@types/react": "^16.9.42",
    "@types/react-dom": "^16.9.8",
    "@types/react-helmet": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "confusing-browser-globals": "^1.0.9",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.7",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "2.0.5",
    "tailwindcss": "^1.4.6",
    "typescript": "^3.9.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "**/*.{json,css,scss,sass,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
